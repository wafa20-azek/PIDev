<BorderPane prefHeight="700" prefWidth="1000" style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.dottn.gui.UpdateproductFXMLController">
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
              <fx:include source="navbar.fxml" />
         </top>
         <bottom>
              <AnchorPane id="AnchorPane" prefHeight="532.0" prefWidth="896.0" BorderPane.alignment="CENTER">
                  <children>
                      <TextField fx:id="tfName" layoutX="350.0" layoutY="21.0" prefHeight="31.0" prefWidth="279.0" />
                      <TextArea fx:id="tfDescription" layoutX="350.0" layoutY="69.0" prefHeight="98.0" prefWidth="279.0" />
                      <TextField fx:id="tfValue" layoutX="350.0" layoutY="187.0" prefHeight="31.0" prefWidth="279.0" />
                      <ComboBox fx:id="category" layoutX="396.0" layoutY="252.0" onAction="#initialiateSubCategory" prefHeight="31.0" prefWidth="187.0" promptText="category" style="-fx-background-color: transparent;" />
                      <ComboBox fx:id="subcategory" layoutX="396.0" layoutY="299.0" prefHeight="31.0" prefWidth="187.0" promptText="subcategory" style="-fx-background-color: transparent;" />
                      <ImageView fx:id="image" fitHeight="260.0" fitWidth="300.0" layoutX="23.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true" />
                      <Button fx:id="btnaddimage" layoutX="80.0" layoutY="293.0" mnemonicParsing="false" onAction="#addimage" prefHeight="31.0" prefWidth="187.0" style="-fx-background-color: transparent;" text="choose image" />
                      <Label fx:id="inputcontrol" layoutX="173.0" layoutY="368.0" text="Label" textFill="RED" />
                      <Button fx:id="btncancel" layoutX="593.0" layoutY="423.0" mnemonicParsing="false" onAction="#cancel" prefHeight="31.0" prefWidth="134.0" style="-fx-background-color: #BF5CFF;" text="Cancel" />
                      <Button fx:id="btnupdateproduct" layoutX="423.0" layoutY="423.0" mnemonicParsing="false" onAction="#updateproduct" prefHeight="31.0" prefWidth="134.0" style="-fx-background-color: #BF5CFF;" text="Update" />
                  </children>
              </AnchorPane>
         </bottom>
      </BorderPane>
   </center>
   <left>
        <fx:include source="sidebaruser.fxml" />
   </left>
</BorderPane>
