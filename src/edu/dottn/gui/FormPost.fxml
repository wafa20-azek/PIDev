<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.dottn.gui.FormPostController">
    <Label layoutX="14.0" layoutY="14.0" text="Nouvelle publication">
    </Label>
    <GridPane layoutX="14.0" layoutY="48.0" prefHeight="153.0" prefWidth="572.0" style="-fx-background-color: #F2F2F2;" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Contenu de la publication:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextArea fx:id="contentTextArea" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Hashtags:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextArea fx:id="hashtagsTextArea" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Catégories:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextArea fx:id="categoriesTextArea" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>
    <HBox layoutX="14.0" layoutY="213.0" prefHeight="30.0" prefWidth="572.0" spacing="10.0">
        <Button fx:id="addImageButton" text="Ajouter une image" />
        <Button fx:id="addVideoButton" text="Ajouter une vidéo" />
    </HBox>
    <HBox layoutX="14.0" layoutY="250.0" prefHeight="30.0" prefWidth="572.0" spacing="10.0">
        <Button fx:id="publishButton" text="Publier" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button fx:id="cancelButton" text="Annuler" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
    </HBox>
</AnchorPane>
